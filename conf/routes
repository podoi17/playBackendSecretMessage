GET     /normalize                              controllers.Assets.at(path="/public/stylesheets", file="normalize.css")
GET     /login-style                            controllers.Assets.at(path="/public/stylesheets", file="login-style.css")


GET     /javascripts/jquery                 controllers.Assets.at(path="/public/javascripts", file="jquery.js")
GET     /javascripts/register                 controllers.Assets.at(path="/public/javascripts", file="register.js")
GET     /javascripts/login                      controllers.Assets.at(path="/public/javascripts", file="login.js")
